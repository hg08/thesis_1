@Article{Salmeron2009,
author ="Salmeron, M. and Bluhm, H. and Tatarkhanov, M. and Ketteler, G. and Shimizu, T. K. and Mugarza, A. and Deng, Xingyi and Herranz, T. and Yamamoto, S. and Nilsson, A.",
